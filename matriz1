package matrizes;

import javax.swing.*;

public class matriz1 {
    public static void main(String[] args) {
        int n  = Integer.parseInt(JOptionPane.showInputDialog("Digite o tamanho da matriz"));
        String palavras[][] = new String[n][n];

        for(int i = 0; i < n; i++) {
            for(int j = 0; j < n; j++) {
                palavras[i][j] = JOptionPane.showInputDialog(null,"Palavra");
            }
        }
    }
}
